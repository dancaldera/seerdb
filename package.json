{
	"name": "seerdb",
	"version": "0.6.1",
	"description": "Terminal-based database explorer rewritten in Bun/TypeScript",
	"type": "module",
	"main": "dist/index.js",
	"bin": {
		"sdb": "./dist/index.js"
	},
	"scripts": {
		"dev": "bun --watch src/index.tsx",
		"build": "bun run build:bundle && bun run build:compile",
		"build:bundle": "mkdir -p dist && cp AGENTS.md dist/ && esbuild src/index.tsx --bundle --platform=node --target=node18 --outfile=dist/index.js --format=esm --minify --external:bun:sqlite",
		"build:compile": "bun scripts/patch-ink.ts && mkdir -p dist && cp AGENTS.md dist/ && bun build src/index.tsx --compile --outfile dist/sdb --target bun --minify --external bun:sqlite",
		"build:wrapper": "echo '#Wrapper no longer needed with ASM patch'",
		"build:exe": "bun run build:compile",
		"start": "bun dist/index.js",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"lint": "biome lint",
		"lint:fix": "biome lint --write .",
		"format": "biome format",
		"format:fix": "biome format --write .",
		"check": "biome check --write .",
		"type-check": "tsc --noEmit",
		"verify": "bash scripts/verify.sh",
		"prepare": "husky"
	},
	"keywords": [
		"database",
		"tui",
		"cli",
		"postgresql",
		"mysql",
		"sqlite"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@toon-format/toon": "^1.0.0",
		"chalk": "^5.3.0",
		"clipboardy": "^4.0.0",
		"date-fns": "^3.0.0",
		"immer": "^10.0.3",
		"ink": "^4.4.1",
		"ink-gradient": "^3.0.0",
		"ink-select-input": "^5.0.0",
		"ink-spinner": "^5.0.0",
		"ink-table": "^3.1.0",
		"ink-text-input": "^5.0.1",
		"mysql2": "^3.6.5",
		"nanoid": "^5.0.7",
		"pg": "^8.11.3",
		"react": "^18.2.0",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.5",
		"@types/node": "^20.19.25",
		"@types/pg": "^8.10.9",
		"@types/react": "^18.2.46",
		"bun-types": "^1.3.2",
		"esbuild": "^0.27.0",
		"husky": "^9.1.7",
		"ink-testing-library": "^4.0.0",
		"lint-staged": "^16.2.7",
		"typescript": "^5.3.3"
	},
	"lint-staged": {
		"src/**/*.{ts,tsx}": [
			"biome check --write"
		],
		"tests/**/*.{ts,tsx}": [
			"biome check --write"
		],
		"AGENTS.md": [
			"biome format --write"
		],
		"README.md": [
			"biome format --write"
		]
	}
}
